# Secret key used for signing tokens or sessions
SECRET_KEY=your-secret-key-here

# Lepton API Key (replace with your actual API key)
LEPTON_API_KEY=your-lepton-api-key

# Application environment: development, staging, production
ENV=development

# Allowed CORS origins (use comma-separated values or * for all)
CORS_ORIGINS=*

# API rate limiting (requests per time window)
RATE_LIMIT=50/minute

# Webhook URL for receiving external callbacks
WEBHOOK_URL=http://host.docker.internal:5001/webhook

# Base URL for the frontend to call the backend API
VITE_API_BASE_URL=http://backend:8000

# PostgreSQL database credentials and connection details
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_NAME=mydb

# Full database URL used by the application
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
