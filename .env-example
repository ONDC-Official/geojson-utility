# Example environment variables for GeoJSON Backend

# Database connection string
DATABASE_URL=postgresql://postgres:postgres@db:5432/mydb

# Secret key for JWT
SECRET_KEY=your_secret_key_here

# JWT access token expiry (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Lepton Maps API key
LEPTON_API_KEY=your_leptonmaps_api_key_here

# Environment (set to 'development' to enable docs, 'production' to disable)
ENV=development

# CORS allowed origins (comma-separated, e.g. https://yourfrontend.com,https://admin.yourfrontend.com)
CORS_ORIGINS=*

# API rate limiting (requests per time window)
RATE_LIMIT=50/minute

# Webhook URL for receiving external callbacks
WEBHOOK_URL=http://host.docker.internal:5001/webhook

# Base URL for the frontend to call the backend API
VITE_API_BASE_URL=http://localhost:8000

# PostgreSQL database credentials and connection details

DB_USERNAME=abc
DB_PASSWORD=abc
DB_HOST=abc
DB_PORT=1234
DB_NAME=abc


# Full database URL used by the application
DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
